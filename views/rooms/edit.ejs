<% layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Room</h1>
  <div class="col-6 offset-3">
    <form action="/rooms/<%=room._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label"  for="newTitle">Add a title</label>
        <input class="form-control" id="newTitle" type="text" name="room[title]" value="<%= room.title %>" required/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="newLocation">Add a location</label>
        <input class="form-control" id="newLocation" type="text" name="room[location]" value="<%= room.location %>" required/>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input class="form-control" type="file" name="image" id="image" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="newPrice">Add price</label>
        <div class="input-group">
          <span class="input-group-text" id="newPrice">$</span>
          <input type="text" class="form-control" id="newPrice" aria-label="Amount (to the nearest dollar)" name="room[price]" value="<%= room.price %>" required>
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="newDescription">Description</label>
        <textarea class="form-control" id="newDescription" type="text" name="room[description]" requried><%= room.description %></textarea>
      </div>
      <div class="mb-3">
        <% room.images.forEach(function(img, i) { %>
          <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
          <div class="form-check">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
            <label class="mb-3" for="image-<%=i%>">Delete?</label>
          </div> 
          <% }) %>  
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update room</button>
      </div>
    </form>
    <a href="/rooms/<%= room._id %> ">Go back</a>
  </div>
</div>
